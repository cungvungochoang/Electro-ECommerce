@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/login.css">
    <title>Register</title>
</head>
<body>
     <form asp-controller="KhachHangs" asp-action="Register">
        <div class="login-box">
            <div class="login-header">
                <header>Đăng ký</header>
            </div>
            <div class="input-box">
                <input type="text" class="input-field" name="username" placeholder="Họ và tên" autocomplete="off" required>
            </div>
            <div class="input-box">
                <input type="text" class="input-field" name="address" placeholder="Địa chỉ" autocomplete="off" required>
            </div>
            <div class="input-box">
                <input type="tel" class="input-field" name="phone" placeholder="Số điện thoại" autocomplete="off" required>
            </div>
            <div class="input-box">
                <input type="email" class="input-field" name="email" placeholder="Email" autocomplete="off" required>
            </div>
            <div class="input-box">
                <input type="password" class="input-field" name="password" placeholder="Mật khẩu" autocomplete="off" required>
            </div>
            <div class="input-box">
                <input type="password" class="input-field" name="confirmpassword" placeholder="Xác nhận mật khẩu" autocomplete="off" required>
            </div>
            <div class="py-3" style="margin-left:100px; margin-bottom:20px">
                @if (!String.IsNullOrEmpty(ViewBag.Error))
                {
                    <span class="p-2 text-rose-600 font-semibold">
                        @ViewBag.Error
                    </span>
                }
            </div>
            <div class="input-submit">
                <button class="submit-btn" id="submit"></button>
                <label for="submit">Tạo tài khoản</label>
            </div>
        </div>
    </form>
</body>
</html>